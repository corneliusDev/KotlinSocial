<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/placeCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardElevation="0dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        card_view:cardBackgroundColor="@color/black"
        android:shadowDy="30"
        android:shadowRadius="30"
        android:background="@color/gray"
        android:visibility="visible"
        card_view:cardCornerRadius="5dp">

    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/top_blur"
               android:background="@color/dark_gray"
               android:visibility="gone"
    />


    <TextView
            android:id="@+id/placeNameH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:layout_margin="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="30sp"
            android:text="hello"
            android:transitionName="categ_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:fontFamily="@font/noto_sans_bold" android:textAlignment="center"/>

    <ImageView
            android:id="@+id/placeImageH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:transitionName="x"/>

    <!-- Used for the ripple effect on touch -->
    <LinearLayout
            android:id="@+id/placeHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:alpha=".70"
            android:orientation="horizontal" />

    <LinearLayout
            android:id="@+id/placeNameHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"

            android:transitionName="tNameHolder"
    android:visibility="invisible">



    </LinearLayout>

</android.support.v7.widget.CardView>