<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
>



    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="vertical"
    >
        <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="What is your age?"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/noto_sans_bold"/>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/light_gray"
                   android:layout_marginBottom="0dp" android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_marginBottom="100dp"
                  android:orientation="vertical"
    >




        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="left"
                      android:layout_marginStart="20dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginBottom="10dp"
                      android:orientation="horizontal"
        >

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="this will help us deliver you relevent and, if under 18, appropiate content"
                    android:textSize="15sp"
                    android:textColor="@color/dark_gray"

                    android:fontFamily="@font/noto_sans"/>

        </LinearLayout>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_login_onboarding_edittext"
                android:inputType="number"
                android:id="@+id/age_onBoard"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:hint="Age"
                android:fontFamily="@font/noto_sans_bold" android:textAllCaps="false"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="right"
                      android:visibility="gone"
                      android:layout_marginStart="20dp"
                      android:layout_marginEnd="20dp"
                      android:orientation="horizontal"
        >

            <Button
                    android:layout_height="45dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/login_button"
                    android:background="@drawable/rounded_onboarding_button"
                    android:textColor="@color/white"
                    android:text="Log In"
            />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>



