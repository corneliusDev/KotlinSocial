<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Web.NewsWebView">

    <include layout="@layout/toolbar" />

    <ImageView
            android:id="@+id/news_transition_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:transitionName="toWeb"
            tools:layout_editor_absoluteY="30dp" tools:layout_editor_absoluteX="32dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="25sp"
              android:id="@+id/title"
              android:textColor="@color/medium_gray"
              android:layout_marginTop="20dp"
              app:layout_constraintTop_toBottomOf="@+id/news_transition_image" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/animationLoad"
              android:layout_margin="8dp"
                android:transitionName="textWeb"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>


    <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_fileName="data.json"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/webview" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/animationLoad"
            app:layout_constraintVertical_bias="0.873"/>

</android.support.constraint.ConstraintLayout>