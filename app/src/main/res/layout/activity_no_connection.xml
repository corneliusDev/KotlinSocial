<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".Networking.NoConnection">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="No Internet"
              android:textSize="20sp"
              android:fontFamily="@font/noto_sans_bold"
              android:textColor="@color/dark_gray"
              android:layout_margin="10dp"
    />

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_fileName="no_internet.json"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:id="@+id/no_connection"



    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retry_button"
            android:background="@drawable/rounded_login"
            android:backgroundTint="@color/dark_gray"
            android:text="Retry"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:onClick="onClick"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_bold"/>




</LinearLayout>