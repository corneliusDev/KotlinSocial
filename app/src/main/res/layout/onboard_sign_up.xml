<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
              android:orientation="vertical"
                >



    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="56dp"
                  android:orientation="vertical"
    >
        <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Sign Up?"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/noto_sans_bold"/>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/light_gray"
                   android:layout_marginBottom="0dp" android:layout_alignParentBottom="true"/>

        <!--<com.airbnb.lottie.LottieAnimationView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="100dp"-->
                <!--app:lottie_fileName="loading_bar.json"-->
                <!--android:scaleType="centerCrop"-->
                <!--app:lottie_autoPlay="true"-->
                <!--android:foregroundGravity="bottom"-->
                <!--app:lottie_loop="true"-->
                <!--android:id="@+id/loading_bar"-->



        <!--/>-->

    </RelativeLayout>



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_marginBottom="200dp"
                  android:orientation="vertical"
    >


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="left"
                      android:layout_marginStart="20dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginBottom="10dp"
                      android:orientation="horizontal"
        >

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="what's your email?"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"

                    android:fontFamily="@font/noto_sans"/>

        </LinearLayout>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_login_onboarding_edittext"
                android:inputType="text"
                android:id="@+id/email_onBoard"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:hint="Email"
                android:fontFamily="@font/noto_sans_bold" android:textAllCaps="false"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  android:layout_marginBottom="10dp"
                  android:orientation="horizontal"
    >

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="set your passcode below"
                android:textSize="20sp"
                android:textColor="@color/dark_gray"

                android:fontFamily="@font/noto_sans"/>

    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_login_onboarding_edittext"
            android:inputType="textPassword"
            android:id="@+id/passcode_onBoard"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:hint="Passcode"
            android:fontFamily="@font/noto_sans_bold" android:textAllCaps="false"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right"
                  android:visibility="gone"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  android:orientation="horizontal"
    >



        <Button
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                android:id="@+id/onBoarding_login"
                android:background="@drawable/rounded_onboarding_button"
                android:textColor="@color/white"
                android:text="next"
        />

    </LinearLayout>
    </LinearLayout>



</LinearLayout>