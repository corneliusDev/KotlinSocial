<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/placeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="60"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:visibility="visible"
>



    <!--<TextView-->
            <!--android:id="@+id/placeName2"-->
            <!--android:text="I love this food so freakin much!"-->
            <!--android:layout_width="wrap_content"-->

            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="40dp"-->
            <!--android:layout_marginStart="240dp"-->


            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:textColor="#000"/>-->




    <!-- Used for the ripple effect on touch -->
    <LinearLayout
            android:id="@+id/placeHolderV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/placeImagew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="tImage"/>


    </LinearLayout>

    <RelativeLayout
            android:id="@+id/placeNameHolder"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:background="@color/black"
            android:alpha=".70"
            android:visibility="visible"

            android:transitionName="tNameHolder">
        <TextView
                android:id="@+id/placeName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Phill Thomas"
                android:textSize="12sp"


                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:layout_toEndOf="@+id/placeImageIcon" android:layout_alignTop="@+id/placeImageIcon"/>

        <TextView
                android:id="@+id/placeName2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="My trip to Scandanavia"
                android:textSize="15sp"


                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:layout_toEndOf="@+id/placeImageIcon" android:layout_alignTop="@+id/placeImageIcon"
                android:layout_marginTop="18dp"/>
        <ImageView
                android:id="@+id/placeImageIcon"
                android:layout_width="60dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:transitionName="tImage"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>