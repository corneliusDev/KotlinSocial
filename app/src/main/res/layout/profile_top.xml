<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/tools"
              android:id="@+id/containerMain"
              android:orientation="vertical"
              android:layout_margin="8dp"
              android:background="@color/dark_gray"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Explore"
              android:textSize="25sp"
              android:textColor="@color/black"
              android:textStyle="bold"


              android:fontFamily="@font/source_sans_pro"/>



    <LinearLayout
            android:id="@+id/container_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            android:orientation="horizontal"
                >



        <androidx.cardview.widget.CardView
                android:id="@+id/top1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/dark_gray"
        >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >


                <ImageView
                        android:id="@+id/top1Image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"

                />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/top2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                card_view:elevation="0dp"
                app:cardBackgroundColor="@color/dark_gray"
        >


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >


                <ImageView
                        android:id="@+id/top2Image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"

                />



            </LinearLayout>

    </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout

            android:id="@+id/container_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            android:orientation="horizontal"
    >

        <androidx.cardview.widget.CardView
                android:id="@+id/bottom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/dark_gray"
                card_view:elevation="0dp"


        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >


            <ImageView
                    android:id="@+id/bottom1Image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"

            />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:id="@+id/bottom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                card_view:elevation="0dp"
                app:cardBackgroundColor="@color/dark_gray"



        >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >


                <ImageView
                        android:id="@+id/bottom2Image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"

                />

            </LinearLayout>



        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <Button
            android:id="@+id/button_see_all"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:text="view all"
            android:background="@drawable/button_effect"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="@font/noto_sans_bold"
            android:textColor="@color/dark_gray"/>
    <TextView
            android:id="@+id/textProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello from GA"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
    />



</LinearLayout>