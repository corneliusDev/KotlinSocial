<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"

>
<android.support.v7.widget.CardView

        android:id="@+id/placeCardExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        card_view:cardElevation="0dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        card_view:cardBackgroundColor="#EBEBEB"
        android:shadowDy="30"
        android:shadowRadius="30"
        android:visibility="visible"
        card_view:cardCornerRadius="5dp">




    <TextView
            android:id="@+id/placeNameHExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:layout_margin="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="30sp"
            android:text="hello"
            android:transitionName="categ_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:fontFamily="@font/noto_sans_bold" android:textAlignment="center"/>

    <ImageView
            android:id="@+id/placeImageHExplore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:transitionName="x"/>

    <!-- Used for the ripple effect on touch -->
    <LinearLayout
            android:id="@+id/placeHolderExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:alpha=".70"
            android:orientation="horizontal" />

    <LinearLayout
            android:id="@+id/placeNameHolderExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"

            android:transitionName="tNameHolder"
    android:visibility="invisible">



    </LinearLayout>

</android.support.v7.widget.CardView>

        </LinearLayout>