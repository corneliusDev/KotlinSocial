<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/header_container"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:layout_marginTop="40px"
              android:layout_marginEnd="40px"
              android:layout_marginStart="40px"
              android:layout_marginBottom="40px"



>

    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               android:id="@+id/user_image"
               android:background="@drawable/usej"


    />


    <RelativeLayout

                    android:id="@+id/lower_header"
                    android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"

    >


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"


        >


            <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Justin Cornelius"
                    android:textSize="23sp"
                    android:textColor="@color/black"


                    android:fontFamily="@font/source_sans_pro" android:textStyle="bold"/>

            <TextView
                    android:id="@+id/user_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Aspiring journalist with a dream to sing and change lives"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"


                    android:fontFamily="@font/source_sans_pro"/>


        </LinearLayout>




        <ImageView
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/light_gray"


                android:layout_alignParentBottom="true"

               />

    </RelativeLayout>



</LinearLayout>