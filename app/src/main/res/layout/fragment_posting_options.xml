<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="300dp"
              android:id="@+id/background"
              android:orientation="vertical"
              android:background="@color/dark_gray"
              android:clickable="true"
             tools:context=".Fragments.PostingOptions">


    <ImageView android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_gravity="top"
               android:layout_margin="10dp"
               android:id="@+id/close"
               android:src="@drawable/ic_close"
    />



    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="10dp"
                  android:orientation="horizontal"

                  android:layout_gravity="center"
    >



       <android.support.v7.widget.CardView android:layout_width="150dp"
                                           android:layout_height="150dp"
                                           app:cardCornerRadius="5dp"
                                           android:layout_marginStart="10dp"
                                           android:layout_marginEnd="10dp"
                                           android:backgroundTint="@color/gray"
                                           android:layout_gravity="center_vertical"
                                           app:cardElevation="0dp"
                                           android:background="@drawable/posting_options"
       >

           <LinearLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_margin="5dp"
                         android:orientation="vertical"
           >



               <ImageView android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:layout_gravity="center"
                          android:layout_margin="5dp"
                          android:id="@+id/camera"
                          android:onClick="onClick"
                          android:background="@drawable/ic_photo_camera"
               />

               <TextView android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:id="@+id/camera_text"
                         android:text="camera"
                         android:fontFamily="@font/noto_sans_bold"
                         android:textColor="@color/dark_gray"
                         android:textSize="16sp"/>

           </LinearLayout>


       </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView android:layout_width="150dp"
                                            android:layout_height="150dp"
                                            app:cardCornerRadius="5dp"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:backgroundTint="@color/gray"
                                            android:layout_gravity="center_vertical"
                                            app:cardElevation="0dp"
                                            android:background="@drawable/posting_options"
        >

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_margin="5dp"
                          android:orientation="vertical"
            >



            <ImageView android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_gravity="center"
                       android:layout_margin="5dp"
                       android:id="@+id/gallery"
                       android:onClick="onClick"
                       android:src="@drawable/ic_gallery"
            />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="gallery"

                          android:textColor="@color/black" android:fontFamily="@font/noto_sans_bold"
                          android:textSize="16sp"/>

            </LinearLayout>






        </android.support.v7.widget.CardView>




    </LinearLayout>


    <android.support.v7.widget.CardView android:layout_width="320dp"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="5dp"
                                        android:id="@+id/select_record_options"
                                        android:layout_marginBottom="30dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:backgroundTint="@color/gray"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="0dp"
                                        android:background="@drawable/posting_options"
    >

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_gravity="center"
        >

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_margin="5dp"
                       android:layout_gravity="center_vertical"
                       android:background="@drawable/posting_options"
                       android:backgroundTint="@color/accent"
            />



        <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/video_text"
                  android:text="video"

                  android:textColor="@color/black" android:fontFamily="@font/noto_sans_bold"
                  android:textSize="20sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>